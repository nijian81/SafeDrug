<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bj"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_height="@dimen/xmlTopTitleHeight"
        android:layout_width="match_parent"
        android:background="@color/xmlTopTitleBackgroundColor"
        android:id="@+id/top">

        <EditText
            android:id="@+id/input_search"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@null"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_marginLeft="9dp"
            android:background="@drawable/corners_bg_zc"
            android:cursorVisible="true"
            android:textColor="#b6bab9"
            android:textSize="15sp"
            android:hint="@string/pleaseInputDrugName" />

        <TextView
            android:id="@+id/cancel"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="8dp"
            android:layout_centerVertical="true"
            android:text="@string/cancel"
            android:textColor="@color/xmlWhiteLineColor"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:divider="#65b5a4"
        android:dividerHeight="1dp"
        android:background="#d9ede7"
        android:layout_height="match_parent" />

</RelativeLayout>
