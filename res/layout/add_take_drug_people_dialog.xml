<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/xmlWhiteLineColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/xmlDialogTextMargin"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/xfh" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/AddSelectTakeDrugPeople"
            android:layout_centerVertical="true"
            android:textSize="@dimen/xmlDialogTextSize" />

        <TextView
            android:id="@+id/save"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xmlDialogTextMargin"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#a5cdc1"
            android:text="@string/save" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/wsgrxx"
        android:background="#000000" />

    <HorizontalScrollView
        android:id="@+id/listView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tx1"
                android:layout_height="@dimen/xmlPortraitHeight"
                android:layout_width="@dimen/xmlPortraitWidth"
                android:layout_margin="4dp"
                android:src="@drawable/tx1" />

            <ImageView
                android:id="@+id/tx2"
                android:layout_height="@dimen/xmlPortraitHeight"
                android:layout_width="@dimen/xmlPortraitWidth"
                android:layout_margin="4dp"
                android:src="@drawable/tx2" />

            <ImageView
                android:id="@+id/tx3"
                android:layout_height="@dimen/xmlPortraitHeight"
                android:layout_width="@dimen/xmlPortraitWidth"
                android:layout_margin="4dp"
                android:src="@drawable/tx3" />

            <ImageView
                android:id="@+id/tx4"
                android:layout_height="@dimen/xmlPortraitHeight"
                android:layout_width="@dimen/xmlPortraitWidth"
                android:layout_margin="4dp"
                android:src="@drawable/tx4" />

            <ImageView
                android:id="@+id/tx5"
                android:layout_height="@dimen/xmlPortraitHeight"
                android:layout_width="@dimen/xmlPortraitWidth"
                android:layout_margin="4dp"
                android:src="@drawable/tx5" />

            <ImageView
                android:id="@+id/tx6"
                android:layout_height="@dimen/xmlPortraitHeight"
                android:layout_width="@dimen/xmlPortraitWidth"
                android:layout_margin="4dp"
                android:src="@drawable/tx6" />

            <ImageView
                android:id="@+id/tx7"
                android:layout_height="@dimen/xmlPortraitHeight"
                android:layout_width="@dimen/xmlPortraitWidth"
                android:layout_margin="4dp"
                android:src="@drawable/tx7" />

            <ImageView
                android:id="@+id/tx8"
                android:layout_height="@dimen/xmlPortraitHeight"
                android:layout_width="@dimen/xmlPortraitWidth"
                android:layout_margin="4dp"
                android:src="@drawable/tx8" />

        </LinearLayout>
    </HorizontalScrollView>

    <RelativeLayout
        android:layout_height="90dp"
        android:layout_width="match_parent"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp">


        <EditText
            android:id="@+id/name"
            android:layout_below="@+id/portrait_under"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:cursorVisible="false"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@null"
            android:layout_marginBottom="5dp"
            android:background="@null"
            android:layout_marginTop="20dp"
            android:hint="请输入昵称" />

        <View
            android:layout_below="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#a3a3a3" />

    </RelativeLayout>

</LinearLayout>
