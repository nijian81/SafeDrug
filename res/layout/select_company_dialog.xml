<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/xmlWhiteLineColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/text"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/relateDrug"
            android:drawablePadding="7dp"
            android:drawableLeft="@drawable/relate_drug"
            android:textColor="@color/xmlGrayLineColor"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <View
        android:layout_above="@+id/listView"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/xmlGrayLineColor" />


    <ListView
        android:id="@+id/company"
        android:layout_height="200dp"
        android:layout_width="match_parent"
        android:text="@string/relateDrug"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:divider="@color/xmlGrayLineColor"
        android:dividerHeight="1dp" />

</LinearLayout>
