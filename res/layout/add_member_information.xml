<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bj"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_height="@dimen/xmlTopTitleHeight"
        android:layout_width="match_parent"
        android:background="@color/xmlTopTitleBackgroundColor">

        <ImageButton
            android:id="@+id/back"
            android:layout_height="@dimen/xmlTopLeftIconHeight"
            android:layout_width="@dimen/xmlTopLeftIconWidth"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/xmlTopLeftIconMargin"
            android:scaleType="centerInside"
            android:onClick="login"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/fanhui" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xmlTopTitleHeight"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:text="@string/addMemberInformation"
            android:textColor="@color/xmlWhiteLineColor"
            android:textSize="@dimen/xmlTopTitleTextSize" />

        <TextView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xmlTopTitleHeight"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/xmlTextLayoutMarginRight"
            android:text="@string/save"
            android:textColor="@color/xmlWhiteLineColor"
            android:textSize="@dimen/xmlLittleTopTitleTextSize" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/portrait"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_below="@+id/top"
                android:orientation="vertical"
                android:background="@color/xmlMiddleContentBackgroundColor"
                android:onClick="changePage">

                <ImageView
                    android:id="@+id/portrait_image"
                    android:layout_marginTop="7dp"
                    android:layout_height="60dp"
                    android:layout_width="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/tx4" />

                <TextView
                    android:id="@+id/text_under_portrait"
                    android:layout_marginTop="7dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:layout_below="@+id/portrait_image"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <View
                android:id="@+id/blue_line6"
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_below="@+id/zsx"
                android:background="@null" />

            <!-- 公司介绍 -->

            <RelativeLayout
                android:id="@+id/honey_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xmlMiddleContentHeight"
                android:layout_below="@+id/blue_line6"
                android:background="@color/xmlMiddleContentBackgroundColor"
                android:onClick="login">

                <TextView
                    android:id="@+id/honey_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/nc"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/honeyName"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/honey_name_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@+id/changeToNextPage5"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/pleaseInput"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/changeToNextPage5"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/xiayiye" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/wsgrxx"
                android:background="@null" />

            <RelativeLayout
                android:id="@+id/sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xmlMiddleContentHeight"
                android:layout_below="@+id/blue_line6"
                android:background="@color/xmlMiddleContentBackgroundColor"
                android:onClick="login">

                <TextView
                    android:id="@+id/sex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/xb"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/sex"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/sex_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@+id/changeToNextPage2"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/pleaseInput"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/changeToNextPage2"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/xiayiye" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/wsgrxx"
                android:background="@null" />

            <RelativeLayout
                android:id="@+id/cellphone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/xmlMiddleContentHeight"
                android:layout_below="@+id/blue_line6"
                android:background="@color/xmlMiddleContentBackgroundColor"
                android:onClick="login">

                <TextView
                    android:id="@+id/cellphone_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/sjh"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/cellphoneNumber"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/cellphone_text_view"
                    android:gravity="center"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:inputType="number"
                    android:layout_toLeftOf="@+id/changeToNextPage1"
                    android:text="@string/pleaseInput"
                    android:textSize="20sp"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:background="@null" />

                <ImageView
                    android:id="@+id/changeToNextPage1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/xiayiye" />

            </RelativeLayout>

            <View
                android:id="@+id/blue_line"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:layout_below="@+id/wsgrxx"
                android:background="@null" />

            <RelativeLayout
                android:id="@+id/birthday"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/blue_line6"
                android:background="@color/xmlMiddleContentBackgroundColor"
                android:onClick="login">

                <TextView
                    android:id="@+id/birthday_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/sr"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/birthday"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/birthday_text_view"
                    android:layout_height="50dp"
                    android:layout_width="wrap_content"
                    android:layout_toLeftOf="@+id/changeToNextPage"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="@string/pleaseChoose"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:background="@null" />

                <ImageView
                    android:id="@+id/changeToNextPage"
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/xiayiye" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_below="@+id/wsgrxx"
                android:background="@null" />

            <RelativeLayout
                android:id="@+id/relax_time"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/blue_line6"
                android:background="@color/xmlMiddleContentBackgroundColor"
                android:onClick="login">

                <TextView
                    android:id="@+id/relax_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:drawableLeft="@drawable/zxsj"
                    android:layout_marginLeft="25dp"
                    android:drawablePadding="10dp"
                    android:background="@null"
                    android:gravity="center"
                    android:text="@string/relaxTime"
                    android:textColor="@color/xmlMiddleContentTextColor"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/xiayiye" />

            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:layout_below="@+id/wsgrxx"
                android:background="@null" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
