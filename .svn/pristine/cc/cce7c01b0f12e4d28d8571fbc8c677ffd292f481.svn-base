<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bj">

    <RelativeLayout
        android:layout_height="@dimen/xmlTopTitleHeight"
        android:layout_width="match_parent"
        android:background="@color/xmlTopTitleBackgroundColor"
        android:id="@+id/top">

        <ImageView
            android:id="@+id/back"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_height="40dp"
            android:layout_width="40dp"
            android:onClick="login"
            android:layout_centerInParent="true"
            android:background="@null"
            android:src="@drawable/fanhui" />

        <EditText
            android:id="@+id/input_search"
            android:layout_toRightOf="@+id/back"
            android:selectAllOnFocus="true"
            android:textCursorDrawable="@null"
            android:drawableLeft="@drawable/ss"
            android:drawablePadding="3dp"
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/corners_bg_zc"
            android:cursorVisible="true"
            android:textColor="#b6bab9"
            android:textSize="15sp"
            android:hint="@string/pleaseInputDrugName" />

        <TextView
            android:id="@+id/confirm"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingRight="8dp"
            android:layout_centerVertical="true"
            android:text="@string/confirm"
            android:textColor="@color/xmlWhiteLineColor"
            android:textSize="16sp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:divider="#65b5a4"
        android:dividerHeight="1dp"
        android:background="#d9ede7"
        android:layout_height="match_parent" />

</LinearLayout>
