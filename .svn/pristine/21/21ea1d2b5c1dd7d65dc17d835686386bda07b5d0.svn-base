package com.google.zxing1.client.android1;

import android.content.Intent;
import android.net.Uri;

import java.util.Arrays;
import java.util.EnumSet;
import java.util.HashMap;
import java.util.List;
import java.util.Map;
import java.util.Set;
import java.util.regex.Pattern;

final class DecodeFormatManager {

  private static final Pattern COMMA_PATTERN = Pattern.compile(",");

  static final Set<com.google.zxing1.BarcodeFormat> PRODUCT_FORMATS;
  static final Set<com.google.zxing1.BarcodeFormat> INDUSTRIAL_FORMATS;
  private static final Set<com.google.zxing1.BarcodeFormat> ONE_D_FORMATS;
  static final Set<com.google.zxing1.BarcodeFormat> QR_CODE_FORMATS = EnumSet.of(com.google.zxing1.BarcodeFormat.QR_CODE);
  static final Set<com.google.zxing1.BarcodeFormat> DATA_MATRIX_FORMATS = EnumSet.of(com.google.zxing1.BarcodeFormat.DATA_MATRIX);
  static final Set<com.google.zxing1.BarcodeFormat> AZTEC_FORMATS = EnumSet.of(com.google.zxing1.BarcodeFormat.AZTEC);
  static final Set<com.google.zxing1.BarcodeFormat> PDF417_FORMATS = EnumSet.of(com.google.zxing1.BarcodeFormat.PDF_417);
  static {
    PRODUCT_FORMATS = EnumSet.of(com.google.zxing1.BarcodeFormat.UPC_A,
                                 com.google.zxing1.BarcodeFormat.UPC_E,
                                 com.google.zxing1.BarcodeFormat.EAN_13,
                                 com.google.zxing1.BarcodeFormat.EAN_8,
                                 com.google.zxing1.BarcodeFormat.RSS_14,
                                 com.google.zxing1.BarcodeFormat.RSS_EXPANDED);
    INDUSTRIAL_FORMATS = EnumSet.of(com.google.zxing1.BarcodeFormat.CODE_39,
                                    com.google.zxing1.BarcodeFormat.CODE_93,
                                    com.google.zxing1.BarcodeFormat.CODE_128,
                                    com.google.zxing1.BarcodeFormat.ITF,
                                    com.google.zxing1.BarcodeFormat.CODABAR);
    ONE_D_FORMATS = EnumSet.copyOf(PRODUCT_FORMATS);
    ONE_D_FORMATS.addAll(INDUSTRIAL_FORMATS);
  }
  private static final Map<String,Set<com.google.zxing1.BarcodeFormat>> FORMATS_FOR_MODE;
  static {
    FORMATS_FOR_MODE = new HashMap<>();
    FORMATS_FOR_MODE.put(Intents.Scan.ONE_D_MODE, ONE_D_FORMATS);
    FORMATS_FOR_MODE.put(Intents.Scan.PRODUCT_MODE, PRODUCT_FORMATS);
    FORMATS_FOR_MODE.put(Intents.Scan.QR_CODE_MODE, QR_CODE_FORMATS);
    FORMATS_FOR_MODE.put(Intents.Scan.DATA_MATRIX_MODE, DATA_MATRIX_FORMATS);
    FORMATS_FOR_MODE.put(Intents.Scan.AZTEC_MODE, AZTEC_FORMATS);
    FORMATS_FOR_MODE.put(Intents.Scan.PDF417_MODE, PDF417_FORMATS);
  }

  private DecodeFormatManager() {}

  static Set<com.google.zxing1.BarcodeFormat> parseDecodeFormats(Intent intent) {
    Iterable<String> scanFormats = null;
    CharSequence scanFormatsString = intent.getStringExtra(Intents.Scan.FORMATS);
    if (scanFormatsString != null) {
      scanFormats = Arrays.asList(COMMA_PATTERN.split(scanFormatsString));
    }
    return parseDecodeFormats(scanFormats, intent.getStringExtra(Intents.Scan.MODE));
  }

  static Set<com.google.zxing1.BarcodeFormat> parseDecodeFormats(Uri inputUri) {
    List<String> formats = inputUri.getQueryParameters(Intents.Scan.FORMATS);
    if (formats != null && formats.size() == 1 && formats.get(0) != null){
      formats = Arrays.asList(COMMA_PATTERN.split(formats.get(0)));
    }
    return parseDecodeFormats(formats, inputUri.getQueryParameter(Intents.Scan.MODE));
  }

  private static Set<com.google.zxing1.BarcodeFormat> parseDecodeFormats(Iterable<String> scanFormats, String decodeMode) {
    if (scanFormats != null) {
      Set<com.google.zxing1.BarcodeFormat> formats = EnumSet.noneOf(com.google.zxing1.BarcodeFormat.class);
      try {
        for (String format : scanFormats) {
          formats.add(com.google.zxing1.BarcodeFormat.valueOf(format));
        }
        return formats;
      } catch (IllegalArgumentException iae) {
        // ignore it then
      }
    }
    if (decodeMode != null) {
      return FORMATS_FOR_MODE.get(decodeMode);
    }
    return null;
  }

}
