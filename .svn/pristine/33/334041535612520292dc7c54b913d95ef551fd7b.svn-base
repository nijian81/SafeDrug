<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <!-- 添加一个FrameLayout容器 -->
    <FrameLayout
        android:id="@+id/login_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view" />

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_above="@+id/tab"
        android:id="@+id/view" />

    <LinearLayout
        android:id="@+id/tab"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/xmlMainPageBottomButtonHeight"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonOne"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xmlMainPageBottomButtonHeight"
            android:layout_weight="1"
            android:background="@drawable/yytx"
            android:onClick="changeTab" />

        <Button
            android:id="@+id/buttonTwo"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xmlMainPageBottomButtonHeight"
            android:layout_weight="1"
            android:background="@drawable/yyrc"
            android:onClick="changeTab" />

        <Button
            android:id="@+id/buttonThree"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xmlMainPageBottomButtonHeight"
            android:background="@drawable/ypcx"
            android:layout_weight="1"
            android:onClick="changeTab" />

        <Button
            android:id="@+id/buttonFour"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/xmlMainPageBottomButtonHeight"
            android:background="@drawable/wdzh"
            android:layout_weight="1"
            android:onClick="changeTab" />
    </LinearLayout>

</RelativeLayout>