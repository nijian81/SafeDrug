<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/xmlWhiteLineColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/cancel"
            android:textColor="@color/xmlDialogGreenTextColor"
            android:layout_centerVertical="true"
            android:textSize="@dimen/xmlDialogTextSize"
            android:layout_marginLeft="@dimen/xmlDialogTextMargin"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="取消" />

        <TextView
            android:id="@+id/save"
            android:textColor="@color/xmlDialogGreenTextColor"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/xmlDialogTextMargin"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/xmlDialogTextSize"
            android:text="保存" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/wsgrxx"
        android:background="@color/xmlDialogGreenTextColor" />

    <RelativeLayout
        android:layout_height="120dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent">

        <EditText
            android:id="@+id/num"
            android:layout_height="wrap_content"
            android:layout_width="100dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:inputType="numberDecimal"
            android:background="@null" />

        <View
            android:layout_below="@+id/num"
            android:layout_width="100dp"
            android:layout_height="1dip"
            android:layout_marginLeft="20dp"
            android:background="#D3D3D3" />

        <NumberPicker
            android:id="@+id/desc"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:layout_width="100dp" />

    </RelativeLayout>

</LinearLayout>
