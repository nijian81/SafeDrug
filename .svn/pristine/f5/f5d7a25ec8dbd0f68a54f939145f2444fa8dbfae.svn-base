<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="@color/xmlMiddleContentBackgroundColor"
    android:layout_height="fill_parent">


    <RelativeLayout
        android:id="@+id/top"
        android:layout_height="@dimen/xmlTopTitleHeight"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/xmlTopTitleBackgroundColor">

        <ImageView
            android:id="@+id/search"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:layout_height="@dimen/xmlTopTitleHeight"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/search" />

        <TextView
            android:id="@+id/scan"
            android:layout_height="40dp"
            android:layout_width="80dp"
            android:src="@drawable/ewm"
            android:text="@string/scan"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_alignTop="@+id/search"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:divider="#65b5a4"
        android:dividerHeight="1dp"
        android:background="#d9ede7"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/dialog_center"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center"
        android:background="@color/xmlGrayLineColor"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff"
        android:textSize="30.0dip"
        android:visibility="invisible" />

    <cn.com.phhc.utils.SideBar
        android:id="@+id/alpha"
        android:layout_below="@+id/top"
        android:orientation="vertical"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"/>

</RelativeLayout>