    //在工作线程中调用添加成员接口 尼见 2015-03-30
    class AddMember extends AsyncTask<Object, Object, Object> {

        @Override
        protected Objects doInBackground(Object... params) {

            //调用生成用药时间点接口 尼见 2015-03-27
            //声明网址字符串
            App app = (App)getActivity().getApplication();
            String uriAPI2 = app.getInterfaceUrl()+"guarder/api/user/SaveMember";
            HttpPost httpRequest2 = new HttpPost(uriAPI2);
            List<NameValuePair> params2 = new ArrayList<NameValuePair>();
            //获取当前时间
            SimpleDateFormat formatter = new SimpleDateFormat("yyyy-MM-dd HH:mm:ss");
            Date curDate = new Date(System.currentTimeMillis());
            String localTimeStamp = formatter.format(curDate);
            db = databaseHelper.getWritableDatabase();
            String sql = "select * from anonymityRegister";
            Cursor cursor = db.rawQuery(sql, null);
            String userID = null;
            while (cursor.moveToNext()) {
                userID = cursor.getString(3);
            }
            params2.add(new BasicNameValuePair("userID", userID));
            params2.add(new BasicNameValuePair("memberID", ""));
            params2.add(new BasicNameValuePair("nick", userName));
            params2.add(new BasicNameValuePair("sex", "1"));
            params2.add(new BasicNameValuePair("birth", ""));
            params2.add(new BasicNameValuePair("tel", ""));
            params2.add(new BasicNameValuePair("photo", portrait_id));
            params2.add(new BasicNameValuePair("isDel", "0"));
            try {
                //发出http request
                httpRequest2.setEntity(new UrlEncodedFormEntity(params2, HTTP.UTF_8));
                //取得http response
                HttpResponse httpResponse2 = new DefaultHttpClient().execute(httpRequest2);
                //若状态码为200 ok
                if (httpResponse2.getStatusLine().getStatusCode() == 200) {
                    String strResult2 = EntityUtils.toString(httpResponse2.getEntity());
                    JSONObject jsonObject2 = new JSONObject(strResult2);
                    //成功接受到服务器返回数据之后，结束进度等待窗口
                    progressDialog.dismiss();
                    JSONObject jsonObject = jsonObject2.getJSONObject("data");
                    String sysUser_ID = jsonObject.getString("sysUser_ID");
                    member_id_from_server = sysUser_ID;
                    //用户名
                    userName = name.getText().toString();
                    db = databaseHelper.getWritableDatabase();
                    String familyMemberUserID = java.util.UUID.randomUUID().toString();
                    String sql2 = "insert into MemberInfoTable (memberID, name, isFamily, photo, tel, sex, birth, getup, breakfast, lunch, dinner, sleep, updateTime, updateState) values ('" + member_id_from_server + "','" + userName + "','" + "0" + "','" + portrait_id + "','" + "" + "','" + "" + "','" + "" + "','" + "07:00" + "','" + "07:30" + "','" + "12:00" + "','" + "19:00" + "','" + "21:00" + "','" + "" + "','" + "1" + "')";
                    db.execSQL(sql2);
                    //设置点击之后更新数据库中当前服药人
                    String sql1 = "update anonymityRegister set current_member_id ='" + member_id_from_server + "',current_member_portrait ='" + portrait_id + "',current_member_name ='" + userName + "'";
                    db.execSQL(sql1);
                    //提示用户添加成员成功
                    getActivity().runOnUiThread(new Runnable() {
                        public void run() {

                            AlertDialog dialog = getAlertDialogWithAddMemberSuccess();
                            dialog.show();

                        }
                    });
                    //调用接口，同步用药提醒界面的头像和昵称显示
                    listener.onConfirmInterface(portrait_id, userName);
                    db.close();
                }
            } catch (Exception e) {
                System.out.println(e);
            }
            db.close();
            return null;
        }

        //添加成员成功提示框 尼见 2015-03-26
        AlertDialog getAlertDialogWithAddMemberSuccess() {

            AlertDialog.Builder builder = new AlertDialog.Builder(getActivity(),
                    AlertDialog.THEME_DEVICE_DEFAULT_LIGHT);

            builder.setTitle("提示");
            builder.setMessage("添加成员成功");
            builder.setPositiveButton("确定", new DialogInterface.OnClickListener() {
                @Override
                public void onClick(DialogInterface dialog, int which) {
                    ConfirmTakeDrugMemberRelaxTimeDialogFragment confirmTakeDrugMemberRelaxTimeDialogFragment = new ConfirmTakeDrugMemberRelaxTimeDialogFragment();
